long long int sum=0,rem;
    while(num!=0)
    {
        rem=num%10;
        sum=sum+rem;
        num=num/10;
    }
    if(sum<10)
    {
        return sum;
    }
    else
    {
        return addDigits(sum); //to call the same function with sum other arguments just call the function by passing the argument;
    }
